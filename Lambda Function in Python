def square(x):
    return x * x
# Using a lambda function to achieve the same result
square_lambda = lambda x: x * x
sum =lambda a,b,c: a + b + c  # A lambda function that sums three numbers
# Example usage
print(square(5))          # Output: 25
print(square_lambda(5))   # Output: 25
# Using a lambda function to sort a list of tuples by the second element
def sort_by_second_element(tuples_list):
    return sorted(tuples_list, key=lambda x: x[1])#sorted function sorts the list of tuples based on the second element of each tuple
# Example usage
tuples_list = [(1, 3), (2, 1), (4, 2)]
sorted_list = sort_by_second_element(tuples_list)
print(sorted_list)  # Output: [(2, 1), (4, 2), (1, 3)]
